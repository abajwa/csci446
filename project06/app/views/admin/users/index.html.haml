%h1 Users

%table#headers
	%tr.titles
		%th Username
		%th Password
		%th First name
		%th Last name
		%th Email
	- for user in @users
		%tr{:class => cycle('odd','even')}
			%td= h user.username
			%td= h user.password
			%td= h user.first_name
			%td= h user.last_name
			%td= h user.email
			%td.button= link_to 'Show', [:admin, user]
			%td.button= link_to 'Edit', edit_admin_user_path(user)
			%td.button= link_to 'Destroy', [:admin, user], :confirm => 'Are you sure?', :method => :delete
#borderBottom
%p= link_to "New User", new_admin_user_path
