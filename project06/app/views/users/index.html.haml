%h1 Users

%table
  %tr
    %th Username
    %th Password
    %th First name
    %th Last name
    %th Email
  - for user in @users
    %tr
      %td= h user.username
      %td= h user.password
      %td= h user.first_name
      %td= h user.last_name
      %td= h user.email
      %td= link_to 'Show', user
      %td= link_to 'Edit', edit_user_path(user)
      %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New User", new_user_path
