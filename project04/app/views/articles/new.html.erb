<div id="header">
<h1>Articl.es</h1>
<p>...my cousin works for Bit.ly</p>
</div>

<div id="buttonBar">
<%= link_to image_tag("back.jpg", :border=>0), articles_path %>
</div>

<h2>Creating a New Article</h2>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author_name %>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= image_submit_tag("create.jpg") %>
  </p>
<% end %>