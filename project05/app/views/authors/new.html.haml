#buttonBar
	= link_to image_tag("arrow_left.png", :border=>0) + ' list all authors', authors_path, :title => "to authors list screen"

%h2 New Author

- form_for @author, :html => { :multipart => true } do |f|
	- f.error_messages
	
	%p
		= f.label :author_name
		= f.text_field :author_name
	%p
		= f.label :photo
		= f.file_field :photo
	%p
		#submitButton
			= f.submit 'Create'